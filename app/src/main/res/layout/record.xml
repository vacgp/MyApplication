<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:weightSum="0.6"

    >

    <LinearLayout
        android:id="@+id/child_1_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/child_1_btn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="0.06"
            android:background="#00FFFFFF"
            android:onClick="child1"
            android:src="@drawable/kiddo"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/child_1_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#424d52"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/record_child_gender_btn_1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/child_2_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/child_2_btn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="0.06"
            android:background="#00FFFFFF"
            android:onClick="child2"
            android:src="@drawable/kiddo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/child_2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#424d52"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/record_child_gender_btn_2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/child_3_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/child_3_btn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="0.06"
            android:background="#00FFFFFF"
            android:onClick="child3"
            android:src="@drawable/kiddo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/child_3_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#424d52"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/record_child_gender_btn_3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_btn"
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:layout_weight="0.06"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00FFFFFF"
            android:onClick="new_record"
            app:srcCompat="@drawable/addh"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="@string/add_a_new_record"
            android:textAlignment="center"
            android:textColor="@color/addGrey"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>